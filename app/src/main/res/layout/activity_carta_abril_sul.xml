<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriel.aplicativoacessibilidade.CartaAbril"
    android:background="@android:color/holo_blue_dark">


    <RelativeLayout
        android:id="@+id/cabecalho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:background="@drawable/formabotao"
            android:onClick="cartaLesteAbril"
            android:text="leste"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView18"
            android:layout_marginEnd="18dp"
            android:background="@drawable/formabotao"
            android:onClick="cartaOesteAbril"
            android:text="Oeste"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="50sp"
            android:layout_height="60sp"
            android:layout_alignTop="@+id/button"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/presence_audio_busy"
            tools:layout_editor_absoluteX="167dp"
            tools:layout_editor_absoluteY="16dp"
            android:contentDescription="A esquerda, parte da Constelação do Centauro, com destaque para as estrelas alfa e Beta: Rigil Kentaurus e Hadar, conhecidas como apontadoras da Cruz. A parte inferior desta constelação, forma uma curva, entre este espaço e o resto do céu, a constelação do Cruzeiro do Sul, marcada por cinco estrelas: Rubídea, Mimosa, Magalhães, Intrometida e Pálida.
A direita, a estrela Canopus, da Constelação de Carina."/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            app:srcCompat="@drawable/cartaabrilsul" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="315sp"
            android:contentDescription="Centauro" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="37dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="350dp"
            android:contentDescription="Cruzeiro do Sul" />

        <TextView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="330dp"
            android:contentDescription="Canopos" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>