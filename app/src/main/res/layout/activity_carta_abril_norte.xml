<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriel.aplicativoacessibilidade.CartaAbril"
    android:background="@android:color/holo_blue_dark">


    <RelativeLayout
        android:id="@+id/cabecalho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:background="@drawable/formabotao"
            android:onClick="cartaOesteAbril"
            android:text="oeste"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView18"
            android:layout_marginEnd="18dp"
            android:background="@drawable/formabotao"
            android:onClick="cartaLesteAbril"
            android:text="leste"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="50sp"
            android:layout_height="60sp"
            android:layout_alignTop="@+id/button"
            android:layout_centerHorizontal="true"
            app:srcCompat="@android:drawable/presence_audio_busy"
            tools:layout_editor_absoluteX="167dp"
            tools:layout_editor_absoluteY="16dp"
            android:contentDescription="Na parte central à esquerda, parte da constelação de Gêmeos mostra as estrelas alfa e beta desta, chamadas Pollux e Castor. Acima da Constelação de Gemeos, a estrela Procyon da Constelação de Cão Maior.
A direita, na parte central, a constelção de Leão, com destaque para sua estrela alfa: Regulus."/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:src="@drawable/cartaabrilnorte" />

        <TextView
            android:layout_width="126dp"
            android:layout_height="85dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="300dp"
            android:contentDescription="Leão" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="56dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="350dp"
            android:contentDescription="Gêmeos" />

        <TextView
            android:layout_width="62dp"
            android:layout_height="41dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="270sp"
            android:contentDescription="Procyon" />


    </RelativeLayout>




</android.support.constraint.ConstraintLayout>